// Custom French layout
partial alphanumeric_keys
xkb_symbols "custom" {

    include "fr(basic)"

    name[Group1]= "French (Custom)";

    // Les symboles suivants sont définis pour chaque touche:
    // 1ère position: symbole sans modification
    // 2ème position: symbole avec Shift
    // 3ème position: symbole avec AltGr (ou Alt droit)
    // 4ème position: symbole avec Shift + AltGr

    // Touche F avec AltGr comme touche morte
    key <AC04> { [ f, F, Ue700 ] };  // Utiliser Ue700 comme touche morte

    // Touche Tilde
    key <TLDE> { [ grave, asciitilde, twosuperior, twosuperior ] };
};
